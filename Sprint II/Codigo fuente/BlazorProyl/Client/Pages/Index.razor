<p>P es una etiqueta HTML que se utiliza para crear un párrafo</p>

@code{
    string ciclo = "Desarrollo de software";
}
<form>
    @* Priemra fila*@
    <div class="form-group">
        <div class="row">
            <label for="name">Nombre</label>
            <input type="text" name="name" id="name">
        </div>
    </div>
    @* Segunda Fila*@
    <div class="form-group">
        <div class="row">
            <div class="col-s6">
                <label for="name">Ciclo</label>
                <input type="text" name="ciclo" id="ciclo">
            </div>
            <div class="col-s6">
                <label for="num_ciclo">Número</label>
                <input type="number" name="num_ciclo" id="num_ciclo">
            </div>
        </div>
    </div>
    @*tercer fila contiene un textarea *@
    <div class="form-group row">
        <label for="message" class="col-md-2 col-form-label">Comentarios</label>
        <div class="col-md-10">
            <textarea name="message" id="message" cols="30" rows="10" placeholder="Aquí van tus comentarios" class="form-control"></textarea>
        </div>
    </div>
</form>


<div class="button-group">
    <button class="btn btn-info" @onclick="@Confirmar">Aceptar</button>
</div>
@code {
    private void Confirmar(){
        Console.WriteLine("acabas de dar click en el boton, evento capturado");
