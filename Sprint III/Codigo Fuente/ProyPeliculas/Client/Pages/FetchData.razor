    @page "/fetchdata"
<div class="jumbotron">
    @foreach (var fish in GetFishes())
    {
        <div class="list-group mb-3">
            <a href="" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="row">
                <div class="col-md-3">
                    <img src="@fish.FishImage" class="img-thumbnail" alt="" width="200px" height="200px">
                </div>
                <div class="col-md-9">
                    <h5 class="card-title">
                        Especie de pez: <small class="text-muted">@fish.FishSpecie</small>
                    </h5>
                    @*<blockquote class="blockquote text-center">*@
                        <h5 class="card-title">
                        Descripción:<small class="text-muted">@fish.DescriptionSpecie</small>
                        </h5>
                        <br>
                        Tipo de agua en la que habita:<small class="text-muted">@fish.TypeOfWater</small>
                        <footer class="blockquote-footer">
                            <cite>@fish.PublicationDate.ToString("dd/MM/yyyy")</cite>
                        </footer>
                    @*</blockquote>*@
                </div>
            </div>
            </a>
        </div>
    }
</div>

